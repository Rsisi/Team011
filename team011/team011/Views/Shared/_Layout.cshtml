<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="#">Jaunty Jalopies</a>

            <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("Index","Home")">Home <span class="sr-only">(current)</span></a>
                    </li>
                    @if (@HttpContextAccessor.HttpContext.Session.GetString("loggedUserFullName") != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("LookupCustomerForm", "Customer")">Customers</a>
                        </li>
                        <li class="nav-item">

                            <a class="nav-link" href="@Url.Action("CreateTransactionForm", "SaleTransaction")">Sales Transaction</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "RepairOrder")">Repair Orders</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Report")">Reports</a>
                        </li>
                        }
                    </ul>
                <form class="form-inline my-2 my-lg-0">
                    @if (@HttpContextAccessor.HttpContext.Session.GetString("loggedUserFullName") != null)
                    {
                        <label id="lblLoggedinUser">
                            Welcome, @HttpContextAccessor.HttpContext.Session.GetString("loggedUserFullName")
                        </label>
                    }
                    else
                    {
                        <a href='@Url.Action("Index", "User")'>
                            <input class="btn btn-outline-success my-2 my-sm-0" id="btnNavLogin" type="button" value="Log In" />
                        </a>


                    }



                </form>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

